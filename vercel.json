{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,

  "builds": [
    { "src": "homepage/static/**", "use": "@vercel/static" },
    { "src": "homepage/templates/**", "use": "@vercel/static" }
  ],

  "redirects": [
    { "source": "/homepage", "destination": "/homepage/", "permanent": true }
  ],

  "rewrites": [
    /* --- path-owned apps living in their own projects --- */
    { "source": "/camping/:path*", "destination": "https://camping.dropbop.xyz/camping/:path*" },
    { "source": "/movies/:path*",  "destination": "https://movies.dropbop.xyz/movies/:path*"  },

    /* --- homepage --- */
    { "source": "/homepage/", "destination": "/homepage/templates/index.html" },
    { "source": "/",          "destination": "/homepage/templates/index.html" }
  ],

  "headers": [
    {
      "source": "/homepage/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
